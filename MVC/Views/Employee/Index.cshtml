@{
    ViewData["Title"] = "Dashboard";
}

@section Scripts {
    <script>
        let TasksList = [];
        let user = JSON.parse(sessionStorage.getItem("user"));

        $('#greeting').text('Welcome, ' + user.firstName + ' ' + user.lastName + ' ðŸ‘‹');

        $.ajax({
            url: "http://localhost:5267/api/task/user/" + user.userId,
            type: "GET",
            success: function (response) {
                console.log(response);
                TasksList = response.data;
                var numberOfTask = TasksList.length;
                $('.total_task').text(numberOfTask);


                //filter by status
                let completedTaskCount = TasksList.filter(task => task.status == "Completed").length;
                let pendingTaskCount = TasksList.filter(task => task.status == "Pending").length;


                $('.completed_task').text(completedTaskCount);
                $('.pending_task').text(pendingTaskCount);

                LoadChart(completedTaskCount, pendingTaskCount);
            }
        });

        function LoadChart(completedTask, pendingTask) {
            var ctx = document.getElementById('taskChart').getContext('2d');
            var taskChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Completed', 'Pending'],
                    datasets: [{
                        data: [completedTask, pendingTask],
                        backgroundColor: ['#133E87', '#608BC1'],
                        hoverOffset: 5,
                        borderWidth: 2,
                        borderColor: '#fff',
                        hoverBorderWidth: 3
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: {
                                    size: 14
                                }
                            }
                        }
                    }
                }
            });
        }
    </script>
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>

    <!-- Bootstrap & Google Fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- FontAwesome & Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        :root {
            --primary-color: #133E87;
            --secondary-color: #608BC1;
            --background-color: #F3F3E0;
            --text-color: #333;
        }

        body {
            background-color: var(--background-color);
            font-family: 'Poppins', sans-serif;
            color: var(--text-color);
        }

        /* Dashboard Header with Gradient */
        .dashboard-header {
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 30px 20px;
            border-radius: 10px;
            text-align: center;
            margin-bottom: 30px;
        }

        .dashboard-header img {
            max-width: 250px;
            /* Bigger Logo */
            margin-bottom: 15px;
        }

        .dashboard-header h2 {
            font-size: 2.5rem;
            /* Larger Heading */
            font-weight: bold;
        }

        /* White Cards */
        .card {
            border: none;
            border-radius: 15px;
            background: white;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }

        .card i {
            font-size: 3rem;
            margin-bottom: 10px;
            color: var(--primary-color);
        }

        .chart-container {
            width: 100%;
            height: 300px;
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <!-- Dashboard Header with Logo -->
        <div class="dashboard-header">
            <img src="/Images/Logo2.png" alt="Task Management" class="img-fluid">
            <h2 id="greeting">Welcome, User! ðŸ‘‹</h2>
            <p>Manage your tasks efficiently and stay productive!</p>
        </div>

        <!-- Cards Section -->
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card">
                    <i class="fa-solid fa-tasks"></i>
                    <h5 class="card-title">Total Tasks</h5>
                    <p class="fs-4 total_task">0</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <i class="fa-solid fa-check-circle"></i>
                    <h5 class="card-title">Completed</h5>
                    <p class="fs-4 completed_task">7</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <i class="fa-solid fa-clock"></i>
                    <h5 class="card-title">Pending</h5>
                    <p class="fs-4 pending_task">5</p>
                </div>
            </div>
        </div>

        <!-- Task Progress Chart -->
        <div class="row mt-4">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <h5 class="text-center">Task Progress Overview</h5>
                    <div class="chart-container">
                        <canvas id="taskChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
