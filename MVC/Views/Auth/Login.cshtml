@{
    ViewData["Title"] = "Login";
}
@model Repositories.Models.LoginVM

<div class="contain">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <h2>Login</h2>
    <div class="row">
        <div class="col-md-4 m-auto">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="Login" asp-controller="Employee" enctype="multipart/form-data">
                        <div class="form-group mt-3">
                            <label class="mb-2" for="Email">Email:</label>
                            <input type="text" class="form-control" id="Email" asp-for="Email"
                                placeholder="Enter Email" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label class="mb-2" for="Password">Password:</label>
                            <input type="password" class="form-control" id="Password" asp-for="Password"
                                placeholder="Enter Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mt-4">Login</button>
                    </form>
                    <div class="mt-2">
                        <span class="text-danger" asp-validation-summary="All"></span>
                    </div>
                </div>
            </div>
            <div class="mt-5">
                <p>New to TMS?</p>
                <a class="btn btn-info btn-sm" href="@Url.Action("Create", "Employee")">Register Here</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}